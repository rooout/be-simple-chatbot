# ========================================
# Backend Environment Variables Template
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to git!

# ====== GEMINI AI CONFIGURATION ======
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ====== SERVER CONFIGURATION ======
# Port for the backend server (Railway will override this)
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# ====== CORS CONFIGURATION ======
# Frontend URL for CORS (update this for production)
FRONTEND_URL=http://localhost:3000

# ====== SECURITY ======
# JWT Secret (if you add authentication later)
# JWT_SECRET=your_super_secret_jwt_key_here

# ====== DATABASE (if you add database later) ======
# DATABASE_URL=your_database_connection_string_here

# ====== THIRD-PARTY SERVICES ======
# Email service (if you add email notifications)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# EMAIL_FROM=noreply@yourdomain.com

# Analytics (if you add analytics)
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# ====== PRODUCTION OVERRIDES ======
# These will be set differently in production environments

# For Railway deployment:
# FRONTEND_URL=https://your-vercel-app.vercel.app
# NODE_ENV=production

# For local development, these defaults should work:
# FRONTEND_URL=http://localhost:3000
# NODE_ENV=development
